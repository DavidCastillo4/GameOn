@model GameOn.Web.ViewModel.ProductSummaryViewModel

<div class="product-summary">
    <dl class="row">
        <dd class="col-md-10">
            <h4>
                @Html.ActionLink(Model.Name, "ProductDetails", "Home", new {ProductId = Model.Id}, new {})
            </h4>
        </dd>

        <dd class="col-md-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dd class="col-md-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>