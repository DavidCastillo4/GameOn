@model GameOn.Web.ViewModel.BrowseViewModel

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Browse</h1>

@{
    var index = 0;
}
@foreach (var item in Model.Products)
{
    if (index % 3 == 0)
    {
        @:<div class="row">
    }

    <div class="col-md-4">
        @Html.DisplayFor(p => Model.Products[index])
    </div>
    index++;

    if (index % 3 == 0)
    {
        @: </div>
    }
}